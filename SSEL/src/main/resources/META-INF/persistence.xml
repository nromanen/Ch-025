<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="entityManager"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.softserve.entity.Block</class>
		<class>com.softserve.entity.Category</class>
		<class>com.softserve.entity.Role</class>
		<class>com.softserve.entity.Subject</class>
		<class>com.softserve.entity.Topic</class>
		<class>com.softserve.entity.User</class>
		<class>com.softserve.entity.CourseScheduler</class>
		<class>com.softserve.entity.StudentGroup</class>
		<class>com.softserve.entity.Log</class>
		<class>com.softserve.entity.TeacherRequest</class>
		<class>com.softserve.entity.StudyDocument</class>
		<class>com.softserve.entity.Rating</class>
		<class>com.softserve.entity.Group</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<validation-mode>NONE</validation-mode>
		<properties>
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<!--  <property name="hibernate.hbm2ddl.auto" value="update" /> -->
		</properties>
	</persistence-unit>
</persistence>